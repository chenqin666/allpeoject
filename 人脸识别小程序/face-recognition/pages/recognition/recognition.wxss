/* pages/takephoto/takephoto.wxss */
.takephoto{
  width: 100%;
  margin-top: 100rpx;
  /* position: relative; */
}

.takephoto .camera{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.takephoto .realycamera {
  width: 550rpx;
  height: 550rpx;
  border-radius:50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: -99;
}

.takephoto .goBack {
  color: #1792f0;
  margin-left: 35rpx;
  font-size: 35rpx;
}

.progress_bg {
  position: absolute;
  width: 550rpx;
  height: 550rpx;
  border-radius:50%;
}

.progress_canvas {
   position: absolute;
  width: 550rpx;
  height: 550rpx;
  border-radius:50%;
}

.takephoto .complete {
  border-top: 1rpx solid #e5e5e5;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  color: #1792f0;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.clickphoto{
  margin-top: 30rpx;
  width: 100%;
  text-align: center;
  color: #000000;
   font-size: 32rpx;
}
.foter{
  position: fixed;
  bottom: 0rpx;
    width: 100%;
    margin: 10rpx auto;
    font-size: 26rpx;
    color: gray;
    text-align: center;
}
.bottom_boxs{
    width: 100%;
    margin: 10rpx auto;
    font-size: 26rpx;
    color: gray;
    text-align: center;
}