.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.models{
   top: 32%;
    border-radius: 15px;
    width: 70%;
    text-align: center;
    height: 250rpx;
    line-height: 250rpx;
    font-size: 33rpx;
    position: fixed;
    left: 16%;

    background-color: #FFFFFF;
    z-index: 11;
}
.popLayer{
  /* width: 100%;
  height: 100%; */
  background-color: #B3B3B3;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;
  -moz-opacity: 0.8;
  opacity:.80;
  filter: alpha(opacity=80);/* 只支持IE6、7、8、9 */
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

