.lineView {
  width: 660rpx;
  height: 1px;
  border-top: 1px solid #DEDEDE;
  color: #fff;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5); /*缩放*/
}


.contentView {
  width: 100%;
  height: 104rpx;
  vertical-align: middle;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  
}

.img{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  margin:0 20rpx 0 46rpx;
}

.input {
  flex: 1;
  font-size: 30rpx;
  margin:0 20rpx;
  color: #333;
  vertical-align: middle;
  text-align: left;
  align-items: center;
  justify-content: center;
  /* text-indent: 25rpx; */
}

.foter{
  position: fixed;
  bottom: 40rpx;
    width: 100%;
    margin: 0rpx auto;
    font-size: 0.26rpx;
    color: gray;
    text-align: center;
}
.bottom_boxss{
    width: 100%;
    margin: 5rpx auto;
    font-size: 26rpx;
    color: gray;
    text-align: center;
}
.placeholder {
  flex: 1;
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #d2d2d2;
  vertical-align: middle;
  text-align: left;
  align-items: center;
  justify-content: center;
}

.slidline{
  background-color: #333;
   width:1rpx;
   height:25rpx;
   margin-left: 21rpx;
   margin-right: 21rpx;

  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5); /*缩放*/
}

