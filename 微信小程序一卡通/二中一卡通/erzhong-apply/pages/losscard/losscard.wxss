.page-todos {
 position: fixed;
  width: 100%;
  height: 100%;
  /* background-color: #fff; */
  background: #f9f9f9;
  display: flex;
  flex-direction: column;
}

.chantitie{
   width: 100%;
   position: fixed;
   font-weight: bold;
   top: 0;
    font-family: 'PingFangSC-Regular';
    background-color: #ffffff;
    border-bottom: 0.5px solid #dedede;
    text-align: center;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
}
.chantitie img{
    width: 0.25rem;
    height: 0.15rem;
}
.mainlock{
    font-family: 'PingFangSC-Regular';
    width: 100%;
    margin:0 auto;
    margin-top: 120rpx;
    background-color: #ffffff;
    border-radius: 0.10rem;
}
.mainlock input{
   
    text-align: right;
}
.box{
    display: flex;
    flex-direction: row;
    /* width: 92%; */
    height:80rpx;
    /* padding: 1px; */
    border-bottom: 1px solid #dedede;
    margin: 2rpx 15rpx;
    /* overflow: hidden; */
    position: relative;
    align-items: center;
}
.rights{
  flex: 1;
text-align: right;
font-size: 31rpx;
/* padding-left: 130rpx; */
margin-right: 20rpx;
font-weight: bold;
}

.box text{
   /* flex: 1; */
    height: 60rpx;
    line-height: 60rpx;
    /* text-align: center; */
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #333333;
}
.box input{
  font-size:30rpx;
  /* text-align: right; */
  width: 88%;
}
.tixing{
    color: gray;
    font-size: 28rpx;
    margin: 30rpx;
}
.btn{
    width: 90%;
    height: 88rpx;
    background-color: #36a7fa;
    font-size: 33rpx;
    color: #ffffff;
    margin: 0rpx auto;
    margin-top: 30rpx;
    border-radius:  10rpx;
    text-align: center;
    line-height: 88rpx;
    
}
button::after {
 border:none;
}