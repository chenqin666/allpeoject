    display: flex;
    flex-direction: row;
}

.rowtop .one{
    flex: 1;
    margin-left: 20rpx;
    font-size: 26rpx;
}
.rowtop .two{
     /* flex: 1; */
     margin-right: 20rpx;
    float: right;
}

.rowmain .rowleft{
    float: left;
    margin: 20rpx 20rpx;
    font-size: 28rpx;
}
.rowmain .rowleft text{
    font-size: 26rpx;
    color: gray;
    margin-top: 16rpx;
    }
