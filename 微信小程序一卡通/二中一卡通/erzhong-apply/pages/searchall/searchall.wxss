.page {
  position: fixed;
  width: 100%;
  height: 100%;
  /* background-color: #fff; */
  background: #f9f9f9;
  display: flex;
  flex-direction: column;
}
.chantitie{
   width: 100%;
   position: fixed;
   font-weight: bold;
   top: 0;
    font-style: 'PingFangSC-Regular';
    background-color: #ffffff;
    border-bottom: 0.5px solid #dedede;
    text-align: center;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
}
.tishi{
    margin-top: 110rpx;
    color: red;
    padding: 10rpx 20rpx;
    font-size: 26rpx;
}
.dealmain{
    margin-top: 20rpx;
    width: 100%;
    /* height: 3rem; */
    background: white;
    overflow-y: scroll;
    display: flex;
    flex-direction: column;
}
.dealmain .rowmain{
    flex: 1;
    border-bottom: 0.5px solid #dedede;
    font-size: 28rpx;
}
.dealmain .rowtop{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size:26rpx; 
    /* margin: 0 20rpx; */
