.help-box{
   width: 100%;
  text-align: center;
  vertical-align: bottom;
  align-items: center; 
  justify-content: center;
  /* margin-top: 20rpx; */
  margin: 20rpx  20rpx;
  /* position: fixed;  
  bottom: 20rpx; */
}
.help{
  width: 250rpx;
  height: 88rpx;
  color: #2ab1f3; 
  font-size:26rpx; 
}
.maintop{

  background-color: #fff;
 text-align: right;
  font-size: 0.28rem;
  padding: 0.4rem;
}
.maintop .spans{
   color:#999999;
}
.maintop .spansone{
color:#2ab1f3;
}
.btn{
    width: 90%;
    height: 0.88rem;
    background-color: #36a7fa;
    font-size: 0.34rem;
    color: #ffffff;
    margin: 0 auto;
    margin-top: 0.54rem;
    border-radius:  0.1rem;
    text-align: center;
    line-height: 0.88rem;
    
}