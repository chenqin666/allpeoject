  <view a:if="{{list.length>0}}" class='{{checkedid==allcheck.product_id?"typeitemcheck":"typeitemnormal"}}' onTap='onTypeClick' data-id='{{allcheck.product_id}}' >
          <view class='type_heng'>
           {{allcheck.product_name}}
          </view>
          <!-- 悬浮弹框 -->
        <view class="xuanfu" style="left: 0;" a:if="{{checkedid==allcheck.product_id && allcheck}}">
        <!-- mode="widthFix" -->
         <image  src="../../../assets/xuanfuleft.png" class='xuanfuimg'></image>
        <view>
             <view class="xuanfuone">{{"￥"+allcheck.price}} </view>
             <view class="xuanfutwo">{{allcheck.product_desc}} </view>
         </view> 
      </view>
      
    </view> 

<!-- 第二个 -->
<view a:if="{{allcheckone!='' && list.length>0}}" class='{{checkedid==allcheckone.product_id?"typeitemcheck":"typeitemnormal"}}' onTap='onTypeClick' data-id='{{allcheckone.product_id}}' >
          <view class='type_heng'>
           {{allcheckone.product_name}}
          </view>
          <!-- 悬浮弹框 -->
        
      <view class="xuanfu" style="right: 0;" a:if="{{checkedid==allcheckone.product_id &&allcheckone }}">
        <image  src="../../../assets/xuanfuright.png" class='xuanfuimg'></image>
         <view>
             <view class="xuanfuone">{{"￥"+allcheckone.price}} </view>
             <view class="xuanfutwo">{{allcheckone.product_desc}} </view>
         </view>
      </view> 
      
    </view>

 

  
  <view class='xieyi-box' a:if="{{payNotice}}">
    (
    <span class='xieyi_title'>
      {{payNotice}}
    </span>
     ，
    <span class='price_change' onTap='handlepricechange'>
      点击查看调价方案
    </span>
    )
  </view>



  </view>



<view class='btn-box' style='margin-top:0.4rem;' a:if="{{list.length>0}}">

  <view class='btn'  onTap='go2recharge'>续费充值</view>
</view>

<view class='xieyi-box' style='margin-top:0.05rem;' a:if="{{list.length>0}}">
    <view class='xieyi_title'>
      点击"续费充值"代表你已同意
    </view>
    <view class='xieyi_name' onTap='xieyi'>
      《用户续费充值协议》
    </view>

  </view>

</view>


<view class='topline' />