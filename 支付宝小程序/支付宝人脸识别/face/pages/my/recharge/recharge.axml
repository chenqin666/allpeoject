<!--pages/my/recharge/recharge.wxml-->
<wxs src="../../common/common.wxs" module="tools" />
<view class='page'>
 <view class='cell-box'>
    <view class="cell-title">
      当前孩子:
    </view>

    <view class="cell-value" >
      
      {{logininfo.last_login_student.username}}
    </view>
  </view>
<view class='hor_line' style='margin-left:0.24rem;'></view>

  <view class='cell-box'>
    <view class="cell-title">
      当前状态:
    </view>

    <view class="cell-value" style='color:{{studentStatus==0?"#999999":(isvalid==0?"#09bb07":(isvalid==1?"#f76260":"#999999"))}}'>
      
      {{studentStatus==0?"未开通":(isvalid==0?"正常":(isvalid==1?"即将到期":"已到期"))}}
    </view>
  </view>

  <view class='hor_line' style='margin-left:0.24rem;'></view>

  <view class='cell-box'>
    <view class="cell-title">
      到期日期:
    </view>

    <view class="cell-value" style='color:{{studentStatus==0?"#999999":"#333333"}}'>
      {{studentStatus==0?"未开通":validdate}}
    </view>
  </view>

  <view class='hor_line' style='margin-left:0.24rem;'></view>

  <!-- <view class='cell-box'>
    <view class="cell-title">
      充值套餐
    </view>
  </view> -->


