<script>
    new Vue({
        el: '#warp',
        data: {
            student_id: '',
            passwprd: '',
            names:'',
            originHeight:'',
            screenHeight:'',
            isOriginHeight:true,
        },
        created: function () {
           
            // var project_hash=   this.getQueryString("project_hash");
            // if(project_hash){
            //     sessionStorage.project_hash=project_hash;
            //     this.project_hash=sessionStorage.project_hash;
            // }else  if(sessionStorage.project_hash){
            //     this.project_hash=sessionStorage.project_hash;
            // }
        },
        mounted: function () {
            const that=this;
            that.originHeight= document.documentElement.clientHeight;
            window.onresize =function () {
                that.screenHeight = document.documentElement.clientHeight;
                if(that.originHeight - that.screenHeight>60) {    //这里以防万一改了下判断形式，当屏幕高度减少了60px以上时才隐藏footer
                    that.isOriginHeight = false;
                }else{
                    that.isOriginHeight = true;
                }
            }
        },
        methods: {
            // go2help(){
            //     window.location.href = 'help.html';
            // },
            /*获取参数*/
            getQueryString: function (name) {
                var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
                var r = window.location.search.substr(1).match(reg);
                if (r != null) return unescape(r[2]);
                return null;
            },
            /**
             * 绑定
             */
             loginbind: function () {
                var that = this;
                if (!this.student_id) {
                    this.errorTips('请填写工号/学号');
                    return false;
                }
                if (!this.names) {
                    this.errorTips('请填写真实姓名');
                    return false;
                }
                if (!this.passwprd) {
                    this.errorTips('请填写密码');
                    return false;
                }
                var request = {
                    "mid": sessionStorage.mid, 
                    "card_num":this.student_id,
                    "stu_name":this.names,
                    "password":this.passwprd
                };
                sessionStorage.passwords=this.passwprd
                that.loadAnimation();
                // setTimeout(function () {
                    $.ajax({
                        type: "post",
                        url: root + yktbindcard,
                        beforeSend: function (XMLHttpRequest) {
                            XMLHttpRequest.setRequestHeader("token", sessionStorage.token);
                        },
                        data: {
                            request: JSON.stringify(request)
                        },
                        dataType: "json",
                        success: function (data) {
                            that.loading = false;
                            that.closeAnimation();
                            if (data.code == 0) {
                                // setTimeout(function(){
                                    window.location.href = 'cards.html'
                                // },1000)
                            } 
                            if (data.code == 1000) {
                                that.errorTips(data.msg);
                            }
                        },
                        error: function () {
                            that.loading = false;
                            that.closeAnimation();
                            that.errorTips('网络错误,请重试！');
                        }
                    });
                // }, 1000)
            },
           
            isPoneAvailable: function (val) {
                var myreg = /^[1][0-9]{10}$/;
                if (!myreg.test(val)) {
                    return false;
                } else {
                    return true;
                }
            },
            errorTips: function (msg) {
                this.$toast(msg)
            },
            loadAnimation: function () {
                this.$indicator.open({
                    spinnerType: 'fading-circle'
                });
            },
            closeAnimation: function () {
                this.$indicator.close();
            }
        }
    })
</script>
