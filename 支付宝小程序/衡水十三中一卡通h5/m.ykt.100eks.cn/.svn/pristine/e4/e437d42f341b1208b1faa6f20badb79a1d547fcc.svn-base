/*公共样式--开始*/
html, body, div, ul, li, h1, h2, h3, h4, h5, h6, p, dl, dt, dd, ol, form, input, textarea, th, td, select {
    margin: 0;
    padding: 0;
}

* {
    box-sizing: border-box;
}

html, body {
}

html {
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    /* 解决IOS默认滑动很卡的情况 */
    -webkit-overflow-scrolling: touch;
    /*font-family: "Arial Black", arial-black !important;*/
    -webkit-tap-highlight-color: transparent;

}

body {
    font-family: "Microsoft YaHei";
    font-size: 10px;
    color: #333;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: normal;
}

ul, ol {
    list-style: none;
}

img {
    border: none;
    vertical-align: middle;
}

a {
    text-decoration: none;
    color: #333333;
    cursor: pointer;
}

table {
    border-collapse: collapse;
    table-layout: fixed;
}

input, textarea {
    outline: none;
    border: none;
}

textarea {
    resize: none;
    overflow: auto;
}

.clearfix {
    zoom: 1;
}

.clearfix:after {
    content: ".";
    width: 0;
    height: 0;
    visibility: hidden;
    display: block;
    clear: both;
    overflow: hidden;
}

.fl {
    float: left
}

.fr {
    float: right
}

.tl {
    text-align: left;
}

.tc {
    text-align: center
}

.tr {
    text-align: right;
}

.ellipse {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.inline {
    display: inline-block;
    *display: inline;
    *zoom: 1;
}

.warp {
    width: 100%;

}

.hotline {
    width: 1.5rem;
    height: 0.6rem;
    color: #999999;
    font-size: 0.26rem;
    text-align: center;
    position: fixed;
    margin: 0 auto;
    left: 0;
    right: 0;
    bottom: 0.2rem;
}



.bottom_box{
    position: fixed;
    bottom: 0.3rem;
    width: 100%;
    margin: 0 auto;
    font-size: 0.27rem;
    color: gray;
    text-align: center;
}

.bottom_box_help{

    width: 100%;
    margin: 0 auto;
    font-size: 0.30rem;
    color: #0d658e;
    text-align: center;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
}




.step_box{
    width: 100%;
    height: 1.42rem;
    background-color: #2ab1f3;
    display: flex;
    flex-direction: column;
    -ms-flex-direction: column;
    -webkit-flex-direction: column;
    justify-content: center;
    -webkit-justify-content: center;
    align-items: center;
    -webkit-align-items: center;

    position: fixed;
    top:0;


}


.step_box_top{

    width: 7.02rem;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    -ms-flex-direction: row;
    -webkit-flex-direction: row;
    justify-content: center;
    -webkit-justify-content: center;
    align-items: center;
    -webkit-align-items: center;
    position: relative;
}


.linebg{
    width: 5.14rem;
    border: dashed 1px #8bd3f6;
    position: absolute;
    left:0.85rem;
    top:0.12rem;

}


.step_item_box{
    width: 1.755rem;
    display: flex;
    flex-direction: column;
    -ms-flex-direction: column;
    -webkit-flex-direction: column;
    justify-content: center;
    -webkit-justify-content: center;
    align-items: center;
    -webkit-align-items: center;
    position: relative;

}

.step_item_box img{
    width: 0.25rem;
    height: 0.25rem;
}




.step_title{

    font-family: PingFangSC-Regular;
    font-size: 0.22rem;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #076d9f;
    margin-top: 0.16rem;
}


.step_title_doing{

    font-family: PingFangSC-Regular;
    font-size: 0.22rem;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #ffffff;
    margin-top: 0.16rem;
}

.step_title_undo{

    font-family: PingFangSC-Regular;
    font-size: 0.22rem;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #076d9f;
    margin-top: 0.16rem;
}
