<!--pages/classstudentlist/classstudentlist.wxml-->
<view class='page'>
  <view  class="swiper-tab" style='align-item:bottom;'>
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">{{"未绑定"+((unbindlist&&unbindlist.length>0)?("("+unbindlist.length+")"):"")}}</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">
    {{"绑定未缴费"+((unpaylist&&unpaylist.length>0)?("("+unpaylist.length+")"):"")}}</view>

      <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">
        {{"已缴费"+((list&&list.length>0)?("("+list.length+")"):"")}}</view>
  </view>


<swiper current="{{currentTab}}" class="swiper-box" duration="300" bindchange="bindChange" >
 <swiper-item >
  <scroll-view wx:if="{{unbindlist&&unbindlist.length>0}}" scroll-y="true" style='height:100%;'>

    <block wx:for='{{unbindlist}}' wx:index="index" wx:key="item">

      <view class='item_box' bindtap='onItemClick' data-item='{{item}}'>

        <view class='grade_box'>

          <view class='class_name'>
           {{item.student_name}}
          </view>
          <view class='grade_name'>
            {{item.student_no}}
           </view>
        </view>

        <view class='content_box'>
          <view class='title'>未绑定</view>
          <!-- <view class='value'>{{item.bind_total+"/"+item.unbind_total}}</view> -->
    
        </view>

      </view>



      <view class='hor_line'></view>
    </block>

    <view style='height:25rpx;' />

  </scroll-view>

 </swiper-item >



    <swiper-item >
  <scroll-view wx:if="{{unpaylist&&unpaylist.length>0}}" scroll-y="true" style='height:100%;'>

    <block wx:for='{{unpaylist}}' wx:index="index" wx:key="item">

      <view class='item_box' bindtap='onItemClick' data-item='{{item}}'>

        <view class='grade_box'>

          <view class='class_name'>
           {{item.student_name}}
          </view>
          <view class='grade_name'>
            {{item.student_no}}
           </view>
        </view>

        <view class='content_box'>
          <view class='title'>已绑定未缴费</view>
          <!-- <view class='value'>{{item.bind_total+"/"+item.unbind_total}}</view> -->
    

        </view>

      </view>



      <view class='hor_line'></view>
    </block>

    <view style='height:25rpx;' />

  </scroll-view>

 </swiper-item >




 <swiper-item >
  <scroll-view wx:if="{{list&&list.length>0}}" scroll-y="true" style='height:100%;'>

    <block wx:for='{{list}}' wx:index="index" wx:key="item">

      <view class='item_box' bindtap='onItemClick' data-item='{{item}}'>

        <view class='grade_box'>

          <view class='class_name'>
           {{item.student_name}}
          </view>
          <view class='grade_name'>
            {{item.student_no}}
