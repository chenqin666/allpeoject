/* pages/detail/detail.wxss */

.title_box{
  width:auto;
  min-width: 200rpx;
	height: 60rpx;
	background-color: #ffffff;
	border-radius: 0px 30rpx 30rpx 0px;
	border: solid 1px #dedede;
  padding-left: 24rpx;
  padding-right: 34rpx;
  display:inline-block;
  align-items: center;
  margin-top: 30rpx;
}

.title{
  
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  margin-left: 10rpx;
  display:inline;
}



.total_box {
	width: 702rpx;
	background-color: #ffffff;
	border: solid 1rpx #dedede;
  margin: 0 auto;
  margin-top: 20rpx;
}


.class_box{

  display: flex;
  justify-content: space-between;
}

.class_item_box{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content:center;
}

.class_name{
  	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
  line-height: 88rpx;
  height:88rpx;
  text-align: center;
}

.class_name_on{
    	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff9a00;
  line-height: 88rpx;
  height:88rpx;
  text-align: center;
}

.class_on{
	width: 50rpx;
	height: 3rpx;
  margin: 0 auto;
	background-color: #ff9a00;
}

.class_none{
	width: 50rpx;
	height: 3rpx;
  margin: 0 auto;
	background-color: white;
}

.leiji_box{
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
}

.lieji_title{
  flex: 1;
	height: 130rpx;
  line-height: 130rpx;
    text-align: left;
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;

}



.lieji_detail{

	width: 51rpx;
	height: 130rpx;
   line-height: 130rpx;
   text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff9a00;
}

.info_box{
  display: flex;
  flex-wrap: wrap;
  padding-left: 32rpx;
}


.info_item{
  width: 130rpx;
  display: flex;
  flex-direction:column;
  margin-bottom: 40rpx;
}

.info_title{
	height: 25rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}


.info_value{
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff9a00;
  margin-top: 21rpx;
}


.type-box{
  width: 100%;
  height: 120rpx;
  display: flex;
}



.type{
  flex:1;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.type_on{
    flex:1;
  height: 120rpx;
  align-items: center;
  justify-content: center;
	background-color: #ff9a00;
}


.info_title_on{
  color: white;
}

.info_value_on{
  color: white;
}




.charttitle {
	text-align: center;
	position: relative;
	margin-top: 20rpx;
	margin-bottom: 20rpx;
}
.back-btn {
	position: absolute;
	left: 20rpx;
	top: 0;
}

.canvas {
    width: 100%;
    height: 200px;
}
