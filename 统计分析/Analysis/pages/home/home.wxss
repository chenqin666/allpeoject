/* pages/home/home.wxss */


.item_box{
	width: 702rpx;
	height: 246rpx;
  margin: 0 auto;
	background-color: #ffffff;
	border: solid 1px #dedede;
  margin-top:30rpx; 
}

.title_box{
  display: flex;
  width: 642rpx;
  height: 80rpx;
  margin: 0 auto;
  align-items: center;
}



.title{
  font-family: PingFangSC-Regular;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
  margin-left: 10rpx;
}

.hor_line {
	width: 642rpx;
  margin: 0 auto;
}


.content_box{
  display: flex;
  width: 642rpx;
  height: 165rpx;
  margin: 0 auto;
  align-items: center;
  justify-content: space-between;
}

.content_item{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content_title{
  font-family: PingFangSC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
  line-height: 0;
}

.content_value{
  font-family: PingFangSC-Regular;
	font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff9a00;
  margin-top: 26rpx;
}








