/* pages/login/login.wxss */
.page {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-top: 119rpx;
}
.lineView {
  width: 660rpx;
  height: 1px;
  border-top: 1px solid #DEDEDE;
  color: #fff;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5); /*缩放*/
}
.loginTitle{
  width: 100%;
  text-align: center;
  font-size:48rpx;
  color:"#333333";
}

.leftLabel{
  flex: 1;
  text-align: left;
  font-size:48rpt;
  color:"#333333";
}



.contentView {
  width: 100%;
  height: 96rpx;
  vertical-align: middle;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  
}

.img{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 66rpx;
}

.input {
  flex: 1;
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #333;
  vertical-align: middle;
  text-align: left;
  align-items: center;
  justify-content: center;
}


.placeholder {
  flex: 1;
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #d2d2d2;
  vertical-align: middle;
  text-align: left;
  align-items: center;
  justify-content: center;
}

.slidline{
  background-color: #333;
   width:1rpx;
   height:25rpx;
   margin-left: 21rpx;
   margin-right: 21rpx;

  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5); /*缩放*/
}


.validCode{
  width: 200rpx;
  
  border: 1px solid #2AB1F3;
  background-color: #fff;
  margin-right: 63rpx;
  border-color: #2AB1F3;
  border-radius: 44rpx;
  color: #2AB1F3; 
  text-align: center;
  font-size: 28rpx;
}


.buttonCode{
  width: 660rpx;

  background: #ff9a00;
  border-radius: 44rpx;
  border-color: #ff9a00;
  color: #fff; 
  text-align: center;
   font-size: 34rpx;
}



.help-box{
   width: 100%;
  text-align: center;
  vertical-align: bottom;
  align-items: center; 
  justify-content: center;
  position: fixed;  
  bottom: 20rpx;
}
.help{
  width: 250rpx;
  height: 88rpx;
  font-family: PingFangSC-Regular;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #333333;
}
